\defbeamertemplate*{title page}{fai theme}{
    \vspace{-4cm}
    \ifx\aspect\aspectft
        \hspace{-1.4cm}
    \else
        \hspace{-0.8cm}
    \fi
    %
    % Titel
    \ifx\aspect\aspectft
        \begin{beamercolorbox}[wd=16cm,ht=0.65\textheight,center]{frametitle}
    \else
        \begin{beamercolorbox}[wd=18cm,ht=0.65\textheight,center]{frametitle}
    \fi
        \ifx\aspect\aspectft
            \begin{minipage}[b][0.8cm][t]{11.55cm}
        \else
            \begin{minipage}[b][0.8cm][t]{13.55cm}
            \fi
            \fontfamily{\sfdefault}\selectfont\insertsubtitle
            \end{minipage}
        \vspace{0.1cm}
        \ifx\aspect\aspectft
                \begin{minipage}[t][2.0cm][b]{11.5cm}
        \else
            \begin{minipage}[t][2.0cm][b]{13.5cm}
        \fi
            \Large{\fontfamily{\sfdefault}\selectfont{\flushleft\inserttitle}}
                \vspace{0.1cm}
            \end{minipage}
        \vspace{0.1cm}
    \end{beamercolorbox}
    %
    % Logo
    \ifx\aspect\aspectft
        \begin{textblock}{8}(9,-7.0) \includegraphics[width=4cm]{include/unilogo_white} \end{textblock}
    \else
        \begin{textblock}{10}(10.5,-6.5) \includegraphics[width=4cm]{include/unilogo_white} \end{textblock}
    \fi
    \begin{textblock}{10}(3.2,5)
        \vfill
        \begin{minipage}[b][1.5cm][b]{5cm}
            \scriptsize{\insertinstitute}
        \end{minipage}
    \end{textblock}
    %
    % Author
    \ifx\aspect\aspectft
        \begin{textblock}{14}(0.0,0.5)
    \else
        \begin{textblock}{14}(0.5,0.5)
    \fi
        \fontfamily{\sfdefault}\selectfont\insertauthor
    \end{textblock}
    %
    % Untertitel
    %\ifx\aspect\aspectsn
        %\begin{textblock}{10}(3.2,3.0)
    %\else
        %\begin{textblock}{10}(3.2,3.0)
    %\fi
        %\textit{\insertsubtitle}
    %\end{textblock}
    \ifx\aspect\aspectft
        \begin{textblock}{5.5}(8,7)
    \else
        \begin{textblock}{5.5}(8.5,7)
    \fi
    \hfill\insertdate
    \end{textblock}
    % Siegel
    %
    \ifx\aspect\aspectft
        \begin{textblock}{3}(-1.3,6.9)
    \else
        \begin{textblock}{3}(-1,6.9)
    \fi
        \begin{minipage}[c][1cm][b]{1cm}
            \includegraphics[width=3cm,clip=true,trim=2.5cm 2.5cm 0cm 0cm]{include/siegel}
        \end{minipage}
    \end{textblock}
}

\defbeamertemplate*{frametitle}{fai theme}{
    \vspace{-0.035cm}
    \mbox{
        \leavevmode
        \hspace{-1.5cm}
        \begin{beamercolorbox}[wd=16cm,ht=1cm,dp=0cm]{frametitle}
            \hspace{1.5cm}
            \large{\textsf{\insertframetitle}}
            \vspace{0.3cm}
        \end{beamercolorbox}
        \begin{beamercolorbox}[wd=3cm,ht=1cm,dp=0cm,left]{frametitle}
            \includegraphics[width=1.75cm]{include/unilogo_white}
            \vspace{0.2cm}
        \end{beamercolorbox}
    }
}

