\defbeamertemplate*{footline}{fai theme}{
        \leavevmode
    \begin{minipage}[c][1cm][b]{1cm}
        \includegraphics[width=1cm,clip=true,trim=2.5cm 2.5cm 0cm 0cm]{include/siegel}
    \end{minipage}
    \hspace{0.5cm}
    \begin{minipage}[c][0.6cm][c]{9cm}
        \vfill
        \mbox{\insertshortdate}
        \hspace{0.5cm}
        \ifx\beamer@shortauthor\empty
        \mbox{\insertshorttitle}
        \else
        \mbox{\insertshortauthor~-- \insertshorttitle}
        \fi
        \hfill
    \end{minipage}
    \hfill
    \begin{minipage}[c][0.6cm][c]{0.5cm}
        \vfill
        \ifbeamer@noframenumbering
        no
        \else
        \mbox{\insertframenumber/\inserttotalframenumber}
        \fi
        %\vspace{1pt}
    \end{minipage}
        \hspace{0.2cm}
}

\defbeamertemplate*{note page}{fai theme}{
    \vspace{-0.035cm}
    \mbox{
        \leavevmode
        \hspace{-1.5cm}
        \ifx\aspect\aspectft
            \begin{beamercolorbox}[wd=14.25cm,ht=0.5cm,dp=0.25cm]{frametitle}
        \else
            \begin{beamercolorbox}[wd=17.5cm,ht=0.5cm,dp=0.25cm]{frametitle}
        \fi
            \hspace{1.5cm}
            \textsf{Notizen} \hfill Folie \insertframenumber
            \hspace{0.5cm}
        \end{beamercolorbox}
    }

            \fontfamily{\sfdefault}\selectfont
    {\footnotesize
    \insertnote
    }

}

